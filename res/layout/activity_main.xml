<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5055"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.todolists.MainActivity" >

    <EditText
        android:id="@+id/edtSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/textView4"
        android:background="#ffffff"
        android:padding="5dp"
        android:hint="To note your task" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtSubject"
        android:layout_alignBottom="@+id/edtSubject"
        android:layout_alignParentRight="true"
        android:text="Subject"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtDueDate"
        android:layout_alignBottom="@+id/edtDueDate"
        android:layout_alignParentRight="true"
        android:text="Due Date"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edtSubject"
        android:layout_below="@+id/edtSubject"
        android:layout_marginTop="34dp"
        android:background="#ffffff"
        android:ems="10"
        android:padding="5dp"
        android:hint="Enter date" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtDueDate"
        android:layout_below="@+id/edtDueDate"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/textView4" />

    <Button
        android:id="@+id/btnAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Add Task" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignRight="@+id/textView4"
        android:text="Priority"
        android:textSize="20sp" />

</RelativeLayout>